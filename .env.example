# SecureShare Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Flask environment (development, production, testing)
FLASK_ENV=development
FLASK_DEBUG=True

# Secret key for session management and CSRF protection
# Generate a secure random key for production: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL for development (SQLite)
DATABASE_URL=sqlite:///instance/site.db

# For production on Render (PostgreSQL)
# This will be automatically provided by Render as DATABASE_URL
# Format: postgresql://username:password@hostname:port/database_name

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file size in bytes (default: 50MB)
MAX_CONTENT_LENGTH=52428800

# Upload folder path
UPLOAD_FOLDER=uploads

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx,xls,xlsx,ppt,pptx,mp3,mp4,wav,avi,mov,zip,rar,7z

# =============================================================================
# EMAIL CONFIGURATION (Optional - for email verification)
# =============================================================================

# Email server settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true

# Email credentials
# For Gmail, use an app password: https://support.google.com/accounts/answer/185833
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password

# Default sender email
MAIL_DEFAULT_SENDER=your-email@gmail.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CSRF Protection
WTF_CSRF_ENABLED=true

# Session configuration
SESSION_PERMANENT=false
PERMANENT_SESSION_LIFETIME=3600

# Encryption key for files
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# =============================================================================
# APPLICATION FEATURES
# =============================================================================

# Enable/disable user registration
ALLOW_REGISTRATION=true

# Enable/disable email verification requirement
REQUIRE_EMAIL_VERIFICATION=false

# File encryption (should always be True in production)
ENABLE_ENCRYPTION=true

# =============================================================================
# ADMIN CONFIGURATION (Optional - for initial setup)
# =============================================================================

# Default admin user (will be created during deployment)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-secure-password

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Debug mode (NEVER set to True in production)
DEBUG=false

# =============================================================================
# EXAMPLE VALUES FOR LOCAL DEVELOPMENT
# =============================================================================

# For local development, you can use:
# SECRET_KEY=dev-secret-key-not-for-production
# ENCRYPTION_KEY=dev-encryption-key-not-for-production
# DEBUG=true
